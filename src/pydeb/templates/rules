#!/usr/bin/make -f

# This file was auto-generated by pydeb v{{pydeb_version}} at {{time_now}}

%:
	dh $@ --with python3 --buildsystem={{python_buildsystem}}

override_dh_auto_clean:
	python3 setup.py clean -a
	find . -name \*.pyc -exec rm {} \;

override_dh_auto_build:
	python3 setup.py build --force

override_dh_auto_install:
	python3 setup.py add_extras --extras={{extras}} install --force --root={{root_dir}} --no-compile -O0 --install-layout=deb

{% if systemd_services -%}
override_dh_installinit:
	dh_installinit
        {%- for service in systemd_services %}
	dh_installsystemd --name {{service.name}}
        {%- endfor %}
{%-endif %}
